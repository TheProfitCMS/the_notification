-# Error mesages
-# Post.model_name.human              => activerecord.models.post
-# Post.human_attribute_name('title') => activerecord.attributes.post.title
- if object.errors.any?
  .error_explanation.alert.alert-danger
    %h4= t "the_notification.form_errors"
    %ul
      - object.errors.map do |name, msgs|
        - name = object.class.human_attribute_name(name)
        -# why? because! https://github.com/thoughtbot/paperclip/issues/1292
        -# TODO: rm this later
        - if !msgs.is_a?(Array)
          %li
            %strong= name
            = msgs
        - else
          - msgs.map do |msg|
            %li
              %strong= name
              = msg